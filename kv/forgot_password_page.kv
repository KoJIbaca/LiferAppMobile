<ForgotPasswordPage>

    FloatLayout:
        adaptive_size: True
        canvas:
            Color:
                rgba: 9/255, 30/255, 41/255, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Widget:
            size_hint: .8, .7
            pos_hint: {'center_x': .5, 'center_y': .5}
            canvas:
                Color:
                    rgba: 1, 1, 1, 1
                RoundedRectangle:
                    pos: self.pos
                    size: self.size

        MDLabel:
            id: warning_label
            text: 'Заполните хотя бы одно поле!'
            bold: True
            theme_text_color: 'Custom'
            text_color: 'red'
            pos_hint: {'center_x': .7, 'center_y': .55}
            opacity: 0
        MDTextField:
            id: telephone_number
            mode: 'outlined'
            size_hint: .6, None
            pos_hint: {'center_x': .5, 'center_y': .45}
            MDTextFieldLeadingIcon:
                icon: "phone"
            MDTextFieldHintText:
                text: 'Номер телефона'
        MDTextField:
            id: email
            mode: 'outlined'
            size_hint: .6, None
            pos_hint: {'center_x': .5, 'center_y': .35}
            opacity: 1
            MDTextFieldLeadingIcon:
                icon: "email"
            MDTextFieldHintText:
                text: 'Электронная почта'
        MDButton:
            id: recover_button
            style: "filled"
            radius: 10
            pos_hint: {'center_x': .5, 'center_y': .25}
            on_release:
                root.recover_button_click()
            MDButtonText:
                text: '[b]Восстановить'
                theme_font_size: 'Custom'
                font_size: 18

        MDButton:
            id: cancel_button
            style: 'text'
            adaptive_width: True
            pos_hint: {'center_x': .5, 'center_y': .18}
            on_release:
                root.back_to_login_page()
            MDButtonText:
                text: 'Назад'
                theme_text_color: 'Custom'
                text_color: 0, 0, 0, 1


        Image:
            source: './Images/lock.png'
            size_hint: .4, .4
            adaptive_size: True
            pos_hint: {'center_x': .5, 'center_y': .7}
